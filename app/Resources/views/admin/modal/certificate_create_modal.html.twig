<div class="modal-dialog" role="document">
    <div class="modal-content">
        <!-- Modal title -->
        <div class="modal-header">
            <!-- Cross in the right upper coner -->
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

            <!-- The title itself -->
            <h4 class="modal-title" id="myModalLabel">Создать сертификаты</h4>
        </div>
        <!-- Modal body -->
        <div class="modal-body">
            <div class="row">
                <div class="col-md-6">

                </div>
                <div class="col-md-6">
                    <h4>Создать</h4>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Создать один
                        </div>
                        <div class="panel-body">
                            <div class="input-group input-group-sm">
                                <span class="input-group-addon" style="min-width: 60px;" id="sizing-addon3">ID</span>
                                <input type="text" class="form-control attach-helper" placeholder="" aria-describedby="sizing-addon3" name="ID_Certificate">
                                <span class="glyphicon form-control-feedback"></span>
                            </div>

                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Создать диапазон
                        </div>
                        <div class="panel-body">
                            <div class="input-group input-group-sm">
                                <span class="input-group-addon" style="min-width: 60px;" id="sizing-addon3">От</span>
                                <input type="text" class="form-control attach-helper" placeholder="" aria-describedby="sizing-addon3" name="range_from">
                                <span class="glyphicon form-control-feedback"></span>
                            </div>

                            <div class="input-group input-group-sm">
                                <span class="input-group-addon" style="min-width: 60px;" id="sizing-addon3">До</span>
                                <input type="text" class="form-control attach-helper" placeholder="" aria-describedby="sizing-addon3" name="range_to">
                                <span class="glyphicon form-control-feedback"></span>
                            </div>

                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Создать количество
                        </div>
                        <div class="panel-body">
                            <div class="input-group input-group-sm">
                                <span class="input-group-addon" style="min-width: 60px;" id="sizing-addon3">C</span>
                                <input type="text" class="form-control attach-helper" placeholder="" aria-describedby="sizing-addon3" name="amount_from">
                                <span class="glyphicon form-control-feedback"></span>
                            </div>

                            <div class="input-group input-group-sm">
                                <span class="input-group-addon" style="min-width: 60px;" id="sizing-addon3">Кол-во</span>
                                <input type="text" class="form-control attach-helper" placeholder="" aria-describedby="sizing-addon3" name="amount_count">
                                <span class="glyphicon form-control-feedback"></span>
                            </div>

                        </div>
                    </div>
                    <button type="button" class="btn btn-info pull-right" id="addBtn">Добавить</button>
                </div>
            </div>
        </div>
        <!-- "Save" and "Close" buttons are here for a while -->
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
            <button type="button" class="btn btn-primary">Сохранить</button>
        </div>
    </div>
</div>